{
  "name": "mezinn/number",
  "description": "A library for working with numbers in PHP",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "ext-bcmath": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "mezinn\\number\\": "package"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpcs": [
      "vendor/bin/phpcs --standard=phpcs.xml package"
    ],
    "phpcbf": "vendor/bin/phpcbf --standard=phpcs.xml package",
    "phpstan": "vendor/bin/phpstan analyze --configuration=phpstan.neon"
  }
}
